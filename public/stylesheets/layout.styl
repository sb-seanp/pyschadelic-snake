@import 'nib'

red = #F44336
pink = #E91E63
purple = #9C27B0
deep_purple = #673AB7
indigo = #3F51B5
blue = #2196F3
light_blue = #03A9F4
cyan = #00BCD4
teal = #009688
green = #4CAF50
yellow = #FFEB3B
orange = #FF9800
deep_orange = #FF5722
blue_grey = #607D8B
black = #111111
white = #eeeeee

// #Universal
html, body
    height 100vh
.max-width
    margin  0 auto
    max-width  960px
h1,h2,h3,h4,h5,h6
    font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif

// #Header
header
    font-family Nunito, 'Avenir Next', Avenir, sans-serif
nav
    box-shadow 0 5px 16px 0 #000000
    color white
    font-size large
.navbar-default
    background-color  black
.navbar-nav
    float right
.navbar .navbar-nav > li > a
    font-size larger
    &:hover
        color  green
        
// #Content
.block
    height 100vh
    position relative
    z-index -10
.division
    height 80px
    margin-top -40px
    box-shadow 0 5px 8px #000000, 0 -5px 8px #000000

// Landing
#landing
    background url("../images/fatal_frame_bg.png") no-repeat center center
#landing-heading
    display block
    position relative
    top 50vh
    max-width 768px
    width 100%
    margin 0 auto
#landing-division
    background-color green

// About
#about
    background url('../images/mgs4_bg.png') no-repeat center center
    top -40px
#about-division
    background-color deep_orange